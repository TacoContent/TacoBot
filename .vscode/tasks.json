{
	// VS Code tasks for TacoBot
	"$schema": "vscode://schemas/tasks",
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Python: Run Tests",
			"type": "shell",
			"command": "./.venv/scripts/Activate.ps1; python -m pytest tests/ -x",
			"options": {
				"env": {
					"PYTHONPATH": "${workspaceFolder}/bot"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": [
				"$python"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "Python: Run Tests (Coverage)",
			"type": "shell",
			"command": "./.venv/scripts/Activate.ps1; python -m pytest tests/ -x --cov=html --cov=xml --cov=json --cov-config=.coveragerc --cov-report=term-missing",
			"options": {
				"env": {
					"PYTHONPATH": "${workspaceFolder}/bot"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": [
				"$python"
			]
		},
		{
			"label": "Format Check (Black)",
			"type": "shell",
			"command": "black --check .",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Lint (Super Linter)",
			"type": "shell",
			"command": "docker run --rm --env-file .github/env/super-linter.env -e RUN_LOCAL=true -e CREATE_LOG_FILE=true -e LOG_FILE=reports/super-linter/super-linter-summary.ansi.log -e DEFAULT_BRANCH=develop -e GITHUB_WORKSPACE=/github/workspace -v ${workspaceFolder}:/github/workspace ghcr.io/super-linter/super-linter:v8",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"detail": "Run GitHub Super-Linter locally against the repository using Docker"
		},
		{
			"label": "Swagger Validation Quiet",
			"type": "shell",
			"command": "./.venv/scripts/Activate.ps1; python scripts/swagger_sync.py --config=.swagger-sync.yaml --env=quiet",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": [],
			"detail": "Validate the OpenAPI (Swagger) specification file"
		},
		{
			"label": "Swagger Validation",
			"type": "shell",
			"command": "./.venv/scripts/Activate.ps1; python scripts/swagger_sync.py --config=.swagger-sync.yaml --env=local",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": [],
			"detail": "Validate the OpenAPI (Swagger) specification file"
		},
		{
			"label": "Swagger FIX",
			"type": "shell",
			"command": "./.venv/scripts/Activate.ps1; python scripts/swagger_sync.py --fix --config=.swagger-sync.yaml --env=local",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": [],
			"detail": "Fix the OpenAPI (Swagger) specification file"
		}

	]
}